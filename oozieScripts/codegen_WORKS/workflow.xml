<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="${jobName}">
    <start to='codegenScript' />
    <action name='codegenScript'>
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>/user/niklas.andersen/workflows/codegen/codegenScript.sh</exec>
            <file>/user/niklas.andersen/workflows/codegen/codegenScript.sh</file>
            <file>/user/niklas.andersen/workflows/codegen/lib/postgresql-9.3-1101.jdbc41.jar</file>
        </shell>
        <ok to="end" />
        <error to="fail" />
    </action>
    <kill name="fail">
        <message>Script failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name='end' />
</workflow-app>
